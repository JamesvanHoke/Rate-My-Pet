<div class="card">
      <h1 class="is-size-2 px-4 py-3">#1 Ranked Pet</h1>

      <div class="card-image">
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">{{{pet_name}}}</p>
            <p class="subtitle is-6">Uploaded by:{{{owner_name}}}</p>
          </div>
        </div>

        <div class="content">
          {{{pet_description}}} <a>@bulmaio</a>.
          <a href="#">#css</a> <a href="#">#responsive</a>
          <br>
          <div class="buttons has-addons is-centered">
            <button data-id="{{id}}" class="increment button is-primary">⬆</button>
            <button class="score button is-light">{{pet_score}}</button>
            <button data-id="{{id}}" class="decrement button is-danger">⬇</button>
          </div>
          <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
        </div>
      </div>
    </div>
