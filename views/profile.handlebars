<div class="columns">
    <div class="column is-half">
        <h1 class="is-size-1"> Upload a New Image<h1></h1>
        <br><br>
  <div class="file is-boxed">
  <label class="file-label">
    <input dataImage="" id="file" class="file-input" type="file" name="resume">
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a Pet Photo…
      </span>
    </span>
  </label>
</div>
<br><br>
<input class="input is-medium" type="text" id="petName" placeholder="Name of the Pet">
<br><br>
<input class="input is-medium" type="text" id="petDesc" placeholder="Description">
<br><br>
<input class="input is-medium" type="text" id="ownerName" placeholder="Your Name">
<br><br>
<button class="button is-primary is-outlined" id="uploadBtn">Submit this Photo</button>
        
    </div>
    <div class="column is-size-1">
        My Uploaded Images


    <div class="card">
      <h1 class="is-size-2 px-4 py-3"></h1>

      <div class="card-image">
        <figure class="image is-4by3">
          <img id="img" src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-48x48">
              <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-4">{{{pet_name}}}</p>
            <p class="subtitle is-6">Uploaded by:{{{owner_name}}}</p>
          </div>
        </div>

        <div class="content">
          {{{pet_description}}} 
          <br>
          <div class="buttons has-addons is-centered">
            <button data-id="{{id}}" class="increment button is-primary">⬆</button>
            <button class="score button is-light">{{pet_score}}</button>
            <button data-id="{{id}}" class="decrement button is-danger">⬇</button>
          </div>
          <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
        </div>
      </div>
    </div>

    </div>
</div>

<script src="/js/upload.js"></script>
  <script src="/js/profile.js"></script>